---
/**
 * Edit User Preferences Page
 * Allows authenticated users to update their travel preferences
 * Route: /profile/preferences
 */

import Layout from "../../layouts/Layout.astro";
import EditPreferencesView from "../../components/profile/EditPreferencesView";

// Get authenticated user from middleware
const user = Astro.locals.user;

if (!user) {
  return Astro.redirect("/login");
}
---

<Layout title="Edit Preferences - VibeTravels">
  <EditPreferencesView client:only="react" />
</Layout>
